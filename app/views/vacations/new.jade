extends ../shared/template
block content
  #new-vacation
    .row
      form.save(class="form-inline" role="form", method="post", action="/vacations")
        input#lat(type="hidden", name="lat")
        input#lng(type="hidden", name="lng")
        .form-group
          label.col-sm-2.control-label(for="name") Vacation Name:
          .col-sm-10
            input.form-control#name(type='text', name="name", placeholder="Europe")
        .form-group
          label.col-sm-2.control-label(for="start") From:
          .col-sm-10
            input.form-control#start(type="date", name="start", placeholder="mm/dd/yyyy")
        .form-group
          label.col-sm-2.control-label(for="end") To:
          .col-sm-10
            input.form-control#end(type="date", name="end", placeholder="mm/dd/yyyy")
        .form-group
          .col-sm-offset-2.col-sm-10
            button.outline-inward(type="submit") Save Now


block scripts
  script(src='/js/user/new-vacation.js')
